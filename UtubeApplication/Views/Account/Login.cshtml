
@{
    ViewBag.Title = "Login";
}

@if (ViewBag.IncorrectLogin != null) { 
   <div align="center"> "Incorrect Login. Please enter correct username and password" </div>  

}


<div class="container" id="login-container">
    <form id="login-form" method="post" action="/Account/Login" class="col-sm-8 col-sm-offset-4">
        <h4>Login</h4>
        <div class="form-group">
            <label for="exampleInputEmail1">Username</label>
            <input type="text" class="form-control" name="Username" placeholder="PLease enter your username">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" name="Password" placeholder="Password">
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" value="True" name="RememberMe"> Remember me?
            </label>
        </div>
        @*<div class="form-group">
            <button type="submit" class="btn btn-default btn-primary" id="login-button">Login</button>*@
            <input type="submit" value="Login" class="btn btn-primary" />
        @*</div>*@
</form>


    

</div>

<script>
    $("#login-container #login-button").click(function () {
        var formData = $("#login-form").serialize();
        $.ajax({
            url: "@Url.Action("Login","Account")",
            type: "POST",
            dataType: "json",
            data: formData,
            success: function (result) {
                debugger;
                if (result.Success) {
                    alert("Login successful");
                }
            },
            error: function () {

            }
        });
    });
</script>


