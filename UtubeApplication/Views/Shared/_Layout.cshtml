<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-collapse collapse">
                <div class="row">
                    <div class="col-md-4">
                        @Html.ActionLink("Logo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>

                            @if (Request.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Manage Video", "VideoManagement", "Video")</li>
                                <li>@Html.ActionLink("Upload Video", "UploadVideo", "Video")</li>
                                @*<li><a href="#">Hi CurrentSession.CurrentUser.FirstName</a></li>*@
                                <li>@Html.ActionLink("Logoff", "Logoff", "Account")</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Login", "Login", "Account")</li>
                                <li>@Html.ActionLink("Register", "Register", "Account")</li>
                            }
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
